{
	"name": "mediawiki/extension-manager",
	"type": "mediawiki-extension",
	"description": "Extension manager for MediaWiki",
	"keywords": [
		"composer",
		"mediawiki",
		"extensions",
		"extension management"
	],
	"homepage": "https://github.com/mwjames/composer-packages",
	"license": "GPL-2.0+",
	"authors": [
		{
			"name": "mwjames",
			"homepage": "https://github.com/mwjames"
		},
		{
			"name": "Jeroen De Dauw",
			"email": "jeroendedauw@gmail.com",
			"homepage": "http://jeroendedauw.com"
		}
	],
	"require": {
		"php": ">=5.3.2",
		"mwjames/service-registry": "~0.1",
		"jeroen-de-dauw/i18n": "~0.1",
		"jeroen/simple-cache": "~2.0",
		"jeroen/file-fetcher": "~2.0"
	},
	"repositories": [
		{
			"type": "vcs",
			"url":	"https://github.com/mwjames/service-registry"
		}
	],
	"autoload": {
		"files" : [
			"ExtensionManager.php"
		],
		"psr-4": {
			"ExtensionManager\\": "src/"
		}
	},
	"scripts":{
		"test": [
			"composer validate --no-interaction",
			"composer dump-autoload",
			"php ../../tests/phpunit/phpunit.php -c phpunit.xml.dist"
		]
	}
}